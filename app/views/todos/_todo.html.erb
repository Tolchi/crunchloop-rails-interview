<%= turbo_stream_from "todos" %>
<%= turbo_frame_tag "#{dom_id(todo)}", class: "block" do %>
  <li class="inline-flex items-center justify-center grid-cols-1 gap-2">
    <p class="<%= 'line-through' if todo.completed %>">
      <%= todo.description %>
    </p>
    <%= check_box_tag 'completed', todo.completed, todo.completed, class: "rounded", data: { id: todo.id, todo_list_id: todo.todo_list_id, controller: 'complete', action: 'complete#complete'}%>
  </li>
<% end %>
