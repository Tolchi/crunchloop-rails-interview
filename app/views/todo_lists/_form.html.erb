<div class="py-12 max-w-md">
  <%= form_with model: todo_list, data: { controller: "form-control", action: 'turbo:submit-end->form-control#clear' } do |f| %>
    <div class="inline-grid grid-cols-2 gap-6">
      <span>
        <span class="text-gray-700">name</span>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", placeholder: "Todo list name", data: { form_control_target: "input", action: "input->form-control#toggleButton" } %>
      </span>
      <span>
        <span class="pb-1">&nbsp;</span><br />
        <%= f.submit 'Create Todo list', class: "mt-1 h-[47px] block w-full rounded-sm bg-sky-500 shadow-sm focus:bg-sky-300 focus:ring focus:ring-sky-300 focus:ring-opacity-50 hover:bg-sky-300 hover:ring-sky-300 hover:ring-opacity-70", data: { form_control_target: "submit" } %>
      </span>
    </div>
  <% end %>
</div>
